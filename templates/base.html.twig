<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        
        {# Bootstrap stylesheet #}
        <link href="{{ asset('build/css/app.css') }}" rel="stylesheet">

        {# Personal stylesheet #}
        <link href="{{ asset('build/stylesheet/app.css') }}" rel="stylesheet">

        {# Favicon #}
        <link rel="icon" href="{{ asset('img/favicon.ico') }}">

        {% endblock %}
    </head>

    <body>
        {# header #}
        <header>
            <nav class="navbar navbar-expand-lg" id="navbar">
                <a class="navbar-brand" href="{{ path('homePage') }}">
                    <img id="logo" src="{{ asset('img/icon.jpg') }}" width="60" height="45" alt="logo">
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('homePage') }}">Accueil</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('introductionPage') }}">Présentation</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Tarifs
                            </a>
                            
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Particuliers</a>
                                <a class="dropdown-item" href="#">Professionnels</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        {% block body %}{% endblock %}

        {# Footer #}
        <footer class="footer fixed-bottom" id="footer">
            {# Copyright #}
            <div class="footer-copyright text-center py-3">
                <p>© 2018 Copyright El Ouni Mehdi</p>
            </div>
        </footer>

        {% block javascripts %}
        
        <script src="{{ asset('build/bootstrap-js/app.js') }}"></script>

        {% endblock %}
    </body>
</html>
